<h2><%= @movie.title %></h2>
<%= button_to "Create Viewing Party", "/party/new", method: :get, params: {title: @movie.title, duration: @movie.runtime, api_id: @movie.id} %>
<div class="movie_details">
  <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2<%= @movie_image.image %>" width="200" height="300">
  <p>Voting Average: <%= @movie.vote_average %></p>
  <p>Runtime: <%= @movie.runtime %></p>
  <p>Genre(s): <% @movie.genres.each do |genre| %>
    <%= genre[:name] %></p>
  <% end %>
</div>

<div class="movie_summary">
  <h4>Summary</h4>
  <p><%= @movie.overview %></p>
</div>

<div class="cast">
  <h4>Cast</h4>
  <% @cast.each do |actor| %>
    <li id="actor"><%= actor.name %></li>
    <% end %>
</div>

<div class="review_count">
  <h4><%= @total_results %> Reviews</h4>
</div>

<div class="review_details">
  <% @reviews.each do |review| %>
    <p>Author: <%= review.username %></p>
    <p><%= review.content %></p>
  <% end %>
</div>
